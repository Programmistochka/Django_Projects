# примеры API-запросов

@baseUrl = http://localhost:8000/api/v1

# создание продукта +
POST {{baseUrl}}/products/
Content-Type: application/json

{
  "title": "Свекла",
  "description": "Овощи"
}

###

# получение продуктов +
GET {{baseUrl}}/products/
Content-Type: application/json

###

# обновление продукта +
PATCH {{baseUrl}}/products/5/
Content-Type: application/json

{
  "description": "Самые сочные и ароматные помидорки"
}

###

# удаление продукта +
DELETE {{baseUrl}}/products/6/
Content-Type: application/json

###

# поиск продуктов по названию и описанию
GET {{baseUrl}}/products/?search=помидор
Content-Type: application/json

###

# получение складов +
GET {{baseUrl}}/stocks/
Content-Type: application/json
###

# создание склада +
POST {{baseUrl}}/stocks/
Content-Type: application/json

{
  "address": "Адрес5",
  "positions": [
    {
      "product": 4,
      "quantity": 580,
      "price": 145.50
    },
    {
      "product": 5,
      "quantity": 1000,
      "price": 190
    }
  ]
}

###

# обновляем записи на складе +
PATCH {{baseUrl}}/stocks/16/
Content-Type: application/json

{
  "positions": [
    {
      "product": 5,
      "quantity": 100,
      "price": 130.80
    },
    {
      "product": 4,
      "quantity": 243,
      "price": 145
    }
  ]
}

###

# поиск складов, где есть определенный продукт
GET {{baseUrl}}/stocks/?products=2
Content-Type: application/json

###

# удаление склада +
DELETE {{baseUrl}}/stocks/16
Content-Type: application/json
